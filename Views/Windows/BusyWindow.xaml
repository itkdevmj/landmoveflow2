<Window x:Class="LMFS.Views.BusyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="작업 진행 중"
        Width="300" Height="120"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize">
    <Border Background="#A3C6C4"
                CornerRadius="10"
                Padding="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Height="112" Width="292">
        <Grid Background="#CCFFFFFF">
        <!-- 다이어그램 전체를 살짝 어둡게 -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="다이어그램 생성중..."
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10" />
                <ProgressBar IsIndeterminate="True" Width="220" Height="18"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>