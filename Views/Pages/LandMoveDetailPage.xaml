<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dxdiag="http://schemas.devexpress.com/winfx/2008/xaml/diagram"
      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
      xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
      xmlns:sys="clr-namespace:System;assembly=System.Runtime"
      x:Class="LMFS.Views.Pages.LandMoveDetailPage"
      xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
      xmlns:xtraEditors="clr-namespace:DevExpress.XtraEditors;assembly=DevExpress.XtraEditors.v23.2"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="800"
      Title="토지이동흐름도_(상세)"
      Loaded="LandMoveDetailPage_OnLoaded"
      SizeChanged="LandMoveDetailPage_OnSizeChanged">

    <Page.Resources>
        <!-- BoolToVisibility Converter 추가 -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <DockPanel>

        <Grid DockPanel.Dock="Left" Width="780">

            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Margin="5,0,5,0">
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#A3C6C4" Background="#E0E7E9" BorderThickness="1" CornerRadius="5" Height="40">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="{Binding RegDt}" VerticalAlignment="Center" />
                        <Label Grid.Column="1" Content="{Binding Rsn}" VerticalAlignment="Center" />

                        <!-- 저장 버튼 영역 (조건부 표시) -->
                        <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="10"
                            Visibility="{Binding IsSaveButtonVisible, 
                                        Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button Content="변경사항 저장" 
                                Command="{Binding SaveChangesCommand}"
                                Width="120" 
                                Height="35"
                                Margin="5"/>
                        </StackPanel>
                    </Grid>

                </Border>
            </StackPanel>

            <dxg:GridControl Grid.Row="1" 
                             x:Name="GridControl"
                             ItemsSource="{Binding GridDetailDataSource}">
                <!-- 우클릭 팝업메뉴 -->
                <dxg:GridControl.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="필지 추가" Command="{Binding AddRowCommand}" />
                    </ContextMenu>
                </dxg:GridControl.ContextMenu>
                
                <dxg:GridControl.View>
                    <dxg:TableView AllowEditing="True" 
                                   ShowingEditor="TableView_ShowingEditor">
                    </dxg:TableView>
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="BfPnu" Header="이동전" Width="0.8*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="AfPnu" Header="이동후" Width="0.8*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="BfJimok" Header="이동전_지목" Width="0.7*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="BfArea" Header="이동전_면적" Width="0.8*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="AfJimok" Header="이동후_지목" Width="0.7*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="AfArea" Header="이동후_면적" Width="0.8*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="OwnName" Header="소유자명" Width="2*" 
                        HorizontalHeaderContentAlignment="Center" />

                    <!-- 동적 버튼 컬럼 -->
                    <dxg:GridColumn FieldName="ActionButton" AllowEditing="False" Header="" Width="80" HorizontalHeaderContentAlignment="Center">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <!-- IsNewRow일 때만 버튼 노출, 아니면 빈 패널만 -->
                                <StackPanel>
                                    <Button Content="추가" 
                                        Visibility="{Binding IsNewRow, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Command="{Binding ConfirmAddCommand, RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                        CommandParameter="{Binding}"
                                        Margin="2" Padding="5,2" />
                                </StackPanel>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>
                </dxg:GridControl.Columns>
            </dxg:GridControl>
        </Grid>
    </DockPanel>

</Page>