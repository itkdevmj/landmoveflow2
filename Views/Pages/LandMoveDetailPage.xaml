<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dxdiag="http://schemas.devexpress.com/winfx/2008/xaml/diagram"
      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
      xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
      xmlns:sys="clr-namespace:System;assembly=System.Runtime"
      x:Class="LMFS.Views.Pages.LandMoveDetailPage"
      xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
      xmlns:xtraEditors="clr-namespace:DevExpress.XtraEditors;assembly=DevExpress.XtraEditors.v23.2"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="800"
      Title="토지이동흐름도_(상세)"
      Loaded="LandMoveDetailPage_OnLoaded"
      SizeChanged="LandMoveDetailPage_OnSizeChanged">

    <!-- BoolToVisibility Converter 추가 -->
    <!--
    <Page.Resources>        
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    -->    

    <DockPanel>

        <Grid DockPanel.Dock="Left" Width="780">

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Margin="5,0,5,0">
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#A3C6C4" Background="#E0E7E9" BorderThickness="1" CornerRadius="5" Height="40">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="{Binding LabelRegDt}" VerticalAlignment="Center" />
                        <Label Grid.Column="1" Content="{Binding LabelRsn}" VerticalAlignment="Center" />
                        <!-- 공백(Blank) 컬럼 -->
                        <!-- 저장 버튼 영역 (조건부 표시) -->
                        <TextBlock Grid.Column="2" Text="목록에서 오른쪽 마우스 클릭하면 [필지추가] 할 수 있습니다." Height="16" FontWeight="Bold" Foreground="#FF7E0500"/>
                        <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Visibility="{Binding IsSaveButtonVisible, 
                                        Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button Content="변경사항 저장" 
                                Command="{Binding SaveChangesCommand}" 
                                    Foreground="White" BorderBrush="White" Background="#FFFF7F00" FontWeight="Bold"
                                    Width="120" Height="30" />
                        </StackPanel>
                    </Grid>

                </Border>
            </StackPanel>

            <dxg:GridControl Grid.Row="1" 
                             x:Name="GridControl"
                             ItemsSource="{Binding GridDetailDataSource}">
                <!-- 우클릭 팝업메뉴 -->
                <dxg:GridControl.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="필지 추가" Command="{Binding AddRowCommand}" />
                    </ContextMenu>
                </dxg:GridControl.ContextMenu>
                
                <dxg:GridControl.View>
                    <dxg:TableView AllowEditing="True" 
                                   ShowingEditor="TableView_ShowingEditor">
                    </dxg:TableView>
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="BfJibun" Header="이동전" Width="0.8*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="AfJibun" Header="이동후" Width="0.8*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="BfJimok" Header="이동전_지목" Width="0.7*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="BfArea" Header="이동전_면적" Width="0.8*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="AfJimok" Header="이동후_지목" Width="0.7*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="AfArea" Header="이동후_면적" Width="0.8*" 
                        HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="OwnName" Header="소유자명" Width="2*" 
                        HorizontalHeaderContentAlignment="Center" />

                    <!-- 동적 버튼 컬럼 -->
                    <!-- DevExpress GridControl/Column 사용 시,
                        셀(CellTemplate) DataContext가 그 행의 "데이터 객체"가 아니라 EditGridCellData라는 내부 프록시일 수 있습니다.
                        이때 기본 바인딩({Binding IsNewRow})은 "EditGridCellData" 내부에서 IsNewRow를 찾으려고 하며, 당연히 그런 프로퍼티가 없어 에러가 발생합니다. 
                        - DataContext="{Binding RowData.Row}":
                        - 셀 템플릿의 DataContext를 진짜 행 데이터(GridDetailItem)로 변경합니다.
                        - 이후 Button의 Visibility 등도 정상적으로 IsNewRow 바인딩 가능!-->
                    <dxg:GridColumn FieldName="ActionButton" AllowEditing="False" Header="" Width="80" HorizontalHeaderContentAlignment="Center">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <!-- RowData.Row(LandMoveInfo)를 DataContext 로 사용 -->
                                <StackPanel DataContext="{Binding RowData.Row}">
                                    <!-- 추가 버튼: 새 행일 때만 보이고, 사용자 정의 레코드가 아닐 때 -->
                                    <Button Content="추가" Margin="2" Padding="5,2"
                                        Command="{Binding DataContext.ConfirmAddCommand,
                                             RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding IsNewRow,
                                             RelativeSource={RelativeSource AncestorType=dxg:GridRowContent},
                                             Converter={StaticResource BoolToVisibilityConverter}}">
                                    </Button>
                                    <!-- 삭제 버튼: append_id == CurrentUserId 일 때만 보이게 -->
                                    <Button Content="삭제" Margin="2" Padding="5,2"
                                        Background="Red" Foreground="White"
                                        Command="{Binding DataContext.ConfirmDeleteCommand,
                                             RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                        CommandParameter="{Binding}">
                                        <Button.Visibility>
                                            <MultiBinding Converter="{StaticResource AppendOwnerToVisibilityConverter}">
                                                <!-- 행 데이터의 append_id -->
                                                <Binding Path="append_id"/>
                                                <!-- GridControl(ViewModel)의 CurrentUserId -->
                                                <Binding Path="DataContext.CurrentUserId"
                                                    RelativeSource="{RelativeSource AncestorType=dxg:GridControl}"/>
                                            </MultiBinding>
                                        </Button.Visibility>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>
                </dxg:GridControl.Columns>
            </dxg:GridControl>

            <!-- Ghost Grid : '추가' 시 존재하는 필지정보 검색결과 용도 -->
            <dxg:GridControl Grid.Row="2" Name="FlowDataGrid" Visibility="Collapsed" 
                             AutoExpandAllGroups="True" AllowColumnMRUFilterList="False"
                                ItemsSource="{Binding GridDataSource}" SelectionMode="Row"
                                dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap" ShowBorder="True"
                                Margin="4,0,4,4" Cursor="Hand">

                <dxmvvm:Interaction.Behaviors>
                    <dxmvvm:EventToCommand EventName="MouseDoubleClick" 
                                            Command="{Binding FlowDataDoubleClickCommand}"
                                            PassEventArgsToCommand="True"
                                            />
                </dxmvvm:Interaction.Behaviors>
<!--
                <dxg:GridControl.View>
                    <dxg:TableView ShowIndicator="False" ShowGroupPanel="True" NavigationStyle="Row" AutoWidth="False">
                    </dxg:TableView>
                </dxg:GridControl.View>
-->    
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="bfPnu" Header="이동전" Width="100" UnboundDataType="{x:Type sys:String}"
                                    ReadOnly="True" HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="afPnu" Header="이동후" Width="100" UnboundDataType="{x:Type sys:String}"
                                    ReadOnly="True" HorizontalHeaderContentAlignment="Center" />
                    <dxg:GridColumn FieldName="regDt" Header="정리일" Width="100" HorizontalHeaderContentAlignment="Center"
                                    ReadOnly="True">
                        <dxg:GridColumn.EditSettings>
                            <dxe:DateEditSettings DisplayFormat="yyyyMMdd" ShowPopupIfReadOnly="False" HorizontalContentAlignment="Center" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="rsn" Header="종목" Width="120" MinWidth="120" HorizontalHeaderContentAlignment="Center" 
                                    ReadOnly="True">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings HorizontalContentAlignment="Center" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                </dxg:GridControl.Columns>
                <!--<dxg:GridControl.TotalSummary>
                    <dxg:GridSummaryItem SummaryType="Count" Alignment="Right" />
                    <dxg:GridSummaryItem FieldName="FullName" SummaryType="Count" />
                </dxg:GridControl.TotalSummary>-->
            </dxg:GridControl>
            
            
        </Grid>
    </DockPanel>

</Page>