<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dxdiag="http://schemas.devexpress.com/winfx/2008/xaml/diagram"
      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
      xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
      xmlns:sys="clr-namespace:System;assembly=System.Runtime"
      x:Class="LMFS.Views.Pages.LandMoveSettingPage"
      xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
      xmlns:xtraEditors="clr-namespace:DevExpress.XtraEditors;assembly=DevExpress.XtraEditors.v23.2"
      mc:Ignorable="d" 
      d:DesignHeight="240" d:DesignWidth="340"
      Title="토지이동흐름도_(상세)"
      Loaded="LandMoveSettingPage_OnLoaded"
      SizeChanged="LandMoveSettingPage_OnSizeChanged">

    <DockPanel>

        <Grid DockPanel.Dock="Left" Width="320">

            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Margin="5,0,5,0">
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#A3C6C4" Background="#E0E7E9" BorderThickness="1" CornerRadius="5" Height="40">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Content="변경색상 저장"  Command="{Binding SaveColorCommand}" Width="120" Height="25"/>
                    </Grid>
                </Border>
            </StackPanel>
            <!-- 새로 추가되는 5x7 그리드 -->
            <Grid Grid.Row="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- 첫 번째 행: 병합 셀 -->
                <TextBlock Grid.Row="0" Grid.Column="0"  Grid.RowSpan="2" Text="항목" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Text="기본" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" Text="조회" HorizontalAlignment="Center" FontWeight="Bold"/>

                <TextBlock Grid.Row="1" Grid.Column="1" Text="배경색" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="테두리" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Grid.Column="3" Text="글자색" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Grid.Column="4" Text="배경색" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Grid.Column="5" Text="테두리" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Grid.Column="6" Text="글자색" HorizontalAlignment="Center" FontWeight="Bold"/>

                <!-- ColorPicker (DevExpress ColorEdit) -->
                <!-- xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 필요 -->
                <!-- 내장 팔레트 및 커스텀 팔레트 지원
                     ShowMoreColorsButton을 통해 내장 색상 피커(UI 다이얼로그) 호출 가능
                     EditValueChanged 이벤트로 DiagramControl 혹은 DiagramItem의 Background, StrokeId, ThemeColorId를 즉시 변경 가능.-->
                <Label Grid.Row="2" Grid.Column="0" Content="지번" HorizontalContentAlignment="Center" VerticalAlignment="Center" />
                <dxe:PopupColorEdit Grid.Row="2" Grid.Column="1" Name="colorEdit1_1_1" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FFA5A5A5" EditValue="{Binding Color1_1_1}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="2" Grid.Column="2" Name="colorEdit1_1_2" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FFC8C8C8" EditValue="{Binding Color1_1_2}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="2" Grid.Column="3" Name="colorEdit1_1_3" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FFFFFFFF" EditValue="{Binding Color1_1_3}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="2" Grid.Column="4" Name="colorEdit1_2_1" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FFED7D31" EditValue="{Binding Color1_2_1}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="2" Grid.Column="5" Name="colorEdit1_2_2" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FFC8C8C8" EditValue="{Binding Color1_2_2}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="2" Grid.Column="6" Name="colorEdit1_2_3" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FFFFFFFF" EditValue="{Binding Color1_2_3}" EditValueChanged="OnDiagramColorChanged"/>
                <Label Grid.Row="3" Grid.Column="0" Content="일자/종목" HorizontalContentAlignment="Center" VerticalAlignment="Center" />
                <dxe:PopupColorEdit Grid.Row="3" Grid.Column="1" Name="colorEdit2_1_1" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FFFFFFFF" EditValue="{Binding Color2_1_1}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="3" Grid.Column="2" Name="colorEdit2_1_2" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FF000000" EditValue="{Binding Color2_1_2}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="3" Grid.Column="3" Name="colorEdit2_1_3" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FF000000" EditValue="{Binding Color2_1_3}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="3" Grid.Column="4" Name="colorEdit2_2_1" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FFFFFFFF" EditValue="{Binding Color2_2_1}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="3" Grid.Column="5" Name="colorEdit2_2_2" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FF008000" EditValue="{Binding Color2_2_2}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="3" Grid.Column="6" Name="colorEdit2_2_3" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FF008000" EditValue="{Binding Color2_2_3}" EditValueChanged="OnDiagramColorChanged"/>
                <Label Grid.Row="4" Grid.Column="0" Content="연결선" HorizontalContentAlignment="Center" VerticalAlignment="Center" />
                <dxe:PopupColorEdit Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Name="colorEdit3_1_1" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FF5B9BD5" EditValue="{Binding Color3_1_1}" EditValueChanged="OnDiagramColorChanged"/>
                <dxe:PopupColorEdit Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="3" Name="colorEdit3_2_1" Margin="3" ShowMoreColorsButton="True" DefaultColor="#FFED7D31" EditValue="{Binding Color3_2_1}" EditValueChanged="OnDiagramColorChanged"/>

                <!-- 
                <dxe:ColorEdit Grid.Row="1" Grid.Column="0" Margin="3" 
                                ColumnCount="10" DefaultColor="Crimson"
                                ShowMoreColorsButton="True" ShowNoColorButton="True"
                                MoreColorsButtonContent="색상 선택..." EditValueChanged="OnColorChanged"/>
                -->
                <!-- ColorPicker 예제 (WPF Extended Toolkit 필요) -->
                <!-- NuGet: Extended.Wpf.Toolkit -->
                <!-- 
                <xctk:ColorPicker Grid.Row="1" Grid.Column="0" Margin="3" />
                <xctk:ColorPicker Grid.Row="1" Grid.Column="1" Margin="3" />
                <xctk:ColorPicker Grid.Row="1" Grid.Column="2" Margin="3" />
                <xctk:ColorPicker Grid.Row="1" Grid.Column="3" Margin="3" />
                <xctk:ColorPicker Grid.Row="2" Grid.Column="0" Margin="3" />
                <xctk:ColorPicker Grid.Row="2" Grid.Column="1" Margin="3" />
                <xctk:ColorPicker Grid.Row="2" Grid.Column="2" Margin="3" />
                <xctk:ColorPicker Grid.Row="2" Grid.Column="3" Margin="3" />
                -->
            </Grid>
        </Grid>
    </DockPanel>

<!-- [참고]텍스트 중앙 정렬
HorizontalContentAlignment="Center"
VerticalContentAlignment="Center"
Text="중앙 정렬 텍스트"
-->
 
</Page>
