<Page x:Class="LMFS.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">
    
    <Page.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="맑은고딕 MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="CardContentStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="CardLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource CardContentStyle}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextAlignment" Value="Right"></Setter>
            <Setter Property="Margin" Value="0 5 5 0"></Setter>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="4"></Setter>
        </Style>
    </Page.Resources>
    
    
    <Border Background="#F0F3F5" CornerRadius="10" BorderBrush="#D0D5D8" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="설정" Grid.Row="0" FontWeight="Bold" FontSize="16" Margin="15" Foreground="#1C1C1C"/>

        <StackPanel Grid.Row="1" Margin="15,0,15,15">
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Style="{StaticResource CardTitleStyle}" Text="일반 설정"/>
                    <StackPanel>
                        <CheckBox Content="자동 업데이트 사용" IsChecked="{Binding IsAutoUpdateEnabled}" 
                                  Margin="0,0,0,10" Command="{Binding SaveIsAutoUpdateEnabledCommand}"/>
                        <CheckBox Content="알림 표시" IsChecked="{Binding IsNotificationEnabled}" 
                                  Margin="0,0,0,10" Command="{Binding SaveIsNotificationEnabledCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel Grid.Row="0" Margin="5">
                    <TextBlock Style="{StaticResource CardTitleStyle}" Text="DB 설정"/>
                    <StackPanel>
                        <dxlc:LayoutGroup Orientation="Horizontal" Margin="4">
                            <TextBlock Style="{StaticResource CardLabelStyle}" Width="80" Text="DB 주소"/>
                            <TextBox Width="150" Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding DbIp}" />
                            <TextBlock Style="{StaticResource CardLabelStyle}" Width="80" Text="DB 포트"/>
                            <TextBox Width="80" Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding DbPort}" />
                            <TextBlock Style="{StaticResource CardLabelStyle}" Width="80" Text="DB 이름"/>
                            <TextBox Width="150" Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding DbName}" />
                        </dxlc:LayoutGroup>
                        <dxlc:LayoutGroup Orientation="Horizontal" Margin="4">
                            <TextBlock Style="{StaticResource CardLabelStyle}" Width="80" Text="DB 아이디"/>
                            <TextBox Width="150" Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding DbUserId}"/>
                            <TextBlock Style="{StaticResource CardLabelStyle}" Width="80" Text="DB 암호"/>
                            <TextBox Width="150" Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding DbUserPassword}"/>
                        </dxlc:LayoutGroup>

                        <dxlc:LayoutGroup Orientation="Horizontal" HorizontalAlignment="Right" Height="28" Margin="4">
                                <Button Content="저장" Width="120" Command="{Binding UpdateDatabaseConnectInfoCommand}"/>
                        </dxlc:LayoutGroup>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>
</Border>
</Page>
